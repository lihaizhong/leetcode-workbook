  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "incremental": false,
    "declaration": true,
    "declarationMap": false,
    "sourceMap": false,
    "rootDir": "./src",
    "outDir": "./release",
    "declarationDir": "./release"
  },
  "exclude": [
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.bench.ts"
  ]
}