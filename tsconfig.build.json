{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "UMD",
    "moduleResolution": "node",
    "incremental": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./release",
    "declarationDir": "./release"
  },
  "exclude": [
    "src/**/*.test.ts",
    "src/**/*.spec.ts"
  ],
  "include": [
    "src/**/*"
  ]
}